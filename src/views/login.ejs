<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('partials/head.ejs') %>
    <title>Login</title>
    <script src='https://www.google.com/recaptcha/api.js'></script>
  </head>
  <body>
    <div class="container">
        <header class="header navbar navbar-expand-lg navbar-light bg-light"">
            <ul class= "container-fluid navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li>
            </ul>
        </header>
        <% if(error) {%>
          <% if(errorType==='Success' ) { %>
              <div class="error_container error_container--success">
                  <div class="col--1">
                      <div class="error_container__icon">
                          <i class="fas fa-check-circle"></i>
                      </div>
                  </div>
                  <div class="col--2">
                      <div class="error_container__title heading-3">
                          Success
                      </div>
                      <span class="para-1 error" id="cancelLogin">
                          <%= error %>
                              <!-- Valid Only for 60 Seconds. -->
                      </span>
                  </div>
                  <div class="col--3">
                      <div class="error_container__icon" id="cross">
                          <i class="fas fa-times"></i>
                      </div>
                  </div>
              </div>
              <% } %>
                  <% if(errorType==='Failure' ) { %>
                      <div class="error_container">
                          <div class="col--1">
                              <div class="error_container__icon">
                                  <i class="fas fa-times-circle"></i>
                              </div>
                          </div>
                          <div class="col--2">
                              <div class="error_container__title heading-3">
                                  Failure
                              </div>
                              <span class="para-1 error" id="cancelLogin">
                                  <%= error %>
                                      <!-- Valid Only for 60 Seconds. -->
                              </span>
                          </div>
                          <div class="col--3">
                              <div class="error_container__icon" id="cross">
                                  <i class="fas fa-times"></i>
                              </div>
                          </div>
                      </div>
                      <% } %>
                          <% if(errorType==='Info' ) { %>
                              <div class="error_container error_container--info">
                                  <div class="col--1">
                                      <div class="error_container__icon">
                                          <i class="fas fa-info-circle"></i>
                                      </div>
                                  </div>
                                  <div class="col--2">
                                      <div class="error_container__title heading-3">
                                          Info
                                      </div>
                                      <span class="para-1 error" id="cancelLogin">
                                          <%= error %>
                                              <!-- Valid Only for 60 Seconds. -->
                                      </span>
                                  </div>
                                  <div class="col--3">
                                      <div class="error_container__icon" id="cross">
                                          <i class="fas fa-times"></i>
                                      </div>
                                  </div>
                              </div>
                              <% } %>
                                  <% } %>
      <form action="login" method="POST" id="comment_form" class="form-control">
        <h1 class="text-center">Login</h1>
        <!-- <label for="username">User Name:</label> -->
        <input
        class="form-control"
          type="email"
          name="email"
          id="useremail"
          placeholder="Enter User Email"  required
        />
        <div class="pass_eye"><input type="password" class="form-control" name="password" id="password" placeholder="Enter Password" required>
          <i class="far fa-eye" id="togglePassword"></i>
        </div>
        <div class="g-recaptcha" data-sitekey="6LcrxY4bAAAAAPDtF5FpDpxy8ULF0fYDqUgeBgwe"></div><br>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
      <div class="footer">
      <p class="text-center foot">Haven't Registered Yet? <a href="/register"  class="nav-link">Register Here</a></p>
    </div>
    </div>
    <script src="/js/formvalidation.js"></script>
    <script src="/js/index.js"></script>
    <script>
   
    $(document).ready(function() {
      $('#comment_form').submit(function() {
        $(this).ajaxSubmit({
          error: function(xhr) {
            status('Error: ' + xhr.status);
          },
         success: function(response) {
          console.log(response);
         }
        });
        //Very important line, it disable the page refresh.
        return false;
      });
    });
 

    </script>
  </body>
</html>
